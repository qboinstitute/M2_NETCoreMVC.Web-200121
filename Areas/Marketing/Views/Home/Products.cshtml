    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.23/datatables.min.js"></script>*@
<script src="~/lib/datatables.net/jquery.dataTables.js"></script>
<link href="~/lib/datatables.net/datatables.css" rel="stylesheet" />

<h1>Products with ViewModel</h1>

<table id="tbProductsVM" class="table table-active">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Title</th>
            <th>Marker</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td> <a href="@item.Url" target="_blank">@item.Title</a></td>
                <td>@item.Maker</td>
                <td>
                    <img src="@item.Img" style="height:40px;width:40px" alt="Mi imagen" />
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $('#tbProductsVM').DataTable();
</script>