@using M2_NETCoreMVC.Web.Areas.Marketing.Models
@{
    //var products = ViewData["ProductList"] as IEnumerable<Product>;
    var products = ViewBag.ProductList as IEnumerable<Product>;
    var title = ViewBag.Titulo as string;
}

<h1>Products with ViewBag - JSON Remote</h1>
<h4>@title</h4>
<h4>@ViewBag.Titulo</h4>

<table class="table table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Title</th>
            <th>Marker</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td> <a href="@item.Url" target="_blank">@item.Title</a></td>
                <td>@item.Maker</td>
                <td>
                    <img src="@item.Img" style="height:40px;width:40px" alt="Mi imagen" />
                </td>
            </tr>
        }
    </tbody>
</table>